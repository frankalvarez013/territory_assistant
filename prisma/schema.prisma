// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Congregation {
  id               String      @id @unique @default(uuid())
  congregationName String      @unique @db.VarChar(255)
  address          String      @unique @db.VarChar(255)
  Territories      Territory[]
  Users            User[]
  House            House[]
}

model User {
  id             String       @unique @default(uuid())
  name           String       @db.VarChar(255)
  email          String       @unique @db.VarChar(255)
  password       String       @db.VarChar(255)
  isAdmin        Boolean      @default(false)
  isGeneralAdmin Boolean      @default(false)
  congregationID String
  congregation   Congregation @relation(fields: [congregationID], references: [id], onDelete: Cascade)
  Territory      Territory[]

  @@id([id, congregationID])
}

model TerritoryCounter {
  congregationID  String @id
  nextTerritoryID Int
}

enum TerritoryComment {
  Expired
  Unassigned
  Assigned
}

model Territory {
  territoryID     Int
  location        String           @unique @db.VarChar(255)
  houses          House[]
  AssignedDate    DateTime?
  ExperiationDate DateTime?
  congregationID  String
  currentUserID   String?
  activity        TerritoryComment @default(Unassigned)
  currentUser     User?            @relation(fields: [currentUserID], references: [id])
  Congregation    Congregation     @relation(fields: [congregationID], references: [id], onDelete: Cascade)
  Request         Request[]
  Image           Image?

  @@id([territoryID, congregationID])
  @@unique([territoryID, congregationID])
}

model Image {
  territoryID    Int
  congregationID String
  publicId       String    @unique
  format         String
  version        String
  Territory      Territory @relation(fields: [territoryID, congregationID], references: [territoryID, congregationID])

  @@id([territoryID, congregationID])
}

enum Observation {
  EMPTY
  NO_LLEGAR
  INGLES
  OTRO_IDIOMA
  DUERME_DE_DIA
  VARON_VISITA
  PERRO_AFUERA
  PERRO_EN_CASA
  TESTIGOS
  VIOLENTO
  NO_TRASPASAR
  CANDADO
}

enum Status {
  LLEGA
  VISITO
  NO_LLEGAR
}

model Request {
  id             Int          @id @default(autoincrement())
  observation    Observation?
  comment        String?
  territoryID    Int
  houseID        Int
  congregationID String
  approval       Boolean?
  Territory      Territory    @relation(fields: [territoryID, congregationID], references: [territoryID, congregationID], onDelete: Cascade)
  House          House        @relation(fields: [houseID, territoryID, congregationID], references: [houseID, territoryID, congregationID], onDelete: Cascade)
}

model HouseCounter {
  territoryID    Int
  congregationID String
  nextHouseID    Int

  @@id([territoryID, congregationID])
  @@unique([territoryID, congregationID])
}

model House {
  houseID        Int
  territoryID    Int
  congregationID String
  Direction      String
  StreetAd       String       @unique @db.VarChar(255)
  observation    Observation  @default(EMPTY)
  status         Status       @default(LLEGA)
  comment        String?      @db.VarChar(255)
  dateVisited    DateTime?
  Territory      Territory    @relation(fields: [territoryID, congregationID], references: [territoryID, congregationID], onDelete: Cascade)
  Congregation   Congregation @relation(fields: [congregationID], references: [id], onDelete: Cascade)
  Request        Request[]

  @@id([territoryID, houseID, congregationID])
}
